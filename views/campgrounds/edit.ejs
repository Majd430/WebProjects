<% layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= foundCamp._id %>?_method=PUT" method="post" novalidate class="validated-form"
                enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="title">Camp Name:</label>
                    <input class="form-control" type="text" name="title" id="title" value="<%= foundCamp.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Camp Location:</label>
                    <input class="form-control" type="text" name="location" id="location"
                        value="<%= foundCamp.location %>" required>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Add Image(s):</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div>

                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Add Image:</label>
                    <input type="file" name="image" id="image" multiple>
                    <label class="form-label" for="image">Camp Image URL:</label>
                    <input class="form-control" type="text" name="image" id="image" value="<%= foundCamp.image %>"
                        required>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div> 
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="description">Camp Description:</label>
                    <textarea class="form-control" type="text" name="description" id="description"
                        required><%= foundCamp.description %></textarea>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Camp Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" name="price" id="price" aria-describedby="price-label"
                            value="<%= foundCamp.price %>" required>
                        <div class="valid-feedback">
                            Looks good Camper!
                        </div>
                    </div>

                </div>

                <h6>Delete Image(s):</h6>
                <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">


                    <!-- so here we specified that on medium and higher, take 3 columns and give a row for every 3 column
                         so like this ***  but when small and below, give me only one column and a row so they become this  *
                                      ***                                                                                   *
                                      ***                                                                                   *
                         so basically row-cols give each specified column its own row, like row-cols-2 give a row for every 2 columns -->


                    <% foundCamp.images.forEach((img, i)=> { %>
                        <div class="col">
                            <div class="card">
                                <img class="img-thumbnail img-fluid" src="<%=img.thumbnail%>" alt="">
                                <div class="card-img-overlay text-end pt-2 pe-3">
                                    <label class="visually-hidden" for="image-<%=i%>">Delete Image</label>
                                    <input class="form-check-input" type="checkbox" id="image-<%=i%>"
                                        name="deleteImages[]" value="<%=img.filename%>">
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>


                <!-- <div class="mb-3">
                    <% foundCamp.images.forEach((img, i)=> { %>
                        <img class="img-thumbnail img-fluid" src="<%=img.url%>" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>
                </div> -->
                <!-- ...so the delete never worked because I had  value="img " instead of "img"...sigh-->
                 <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>

            </form>
        </div>
    </div>