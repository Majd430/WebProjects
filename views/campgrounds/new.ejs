<% layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Camp Name:</label>
                    <input class="form-control" type="text" name="title" id="title" placeholder="Enter Camp Name"
                        required>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div>


                <div class="mb-3">
                    <label class="form-label" for="location">Camp Location:</label>
                    <input class="form-control" type=" text" name="location" id="location"
                        placeholder="Enter Camp Location" required>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Add Image(s):</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div>

                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Camp Image URL:</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="Enter Camp Image"
                        required>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="description">Camp Description:</label>
                    <textarea class="form-control" type="text" name="description" id="description"
                        placeholder="Enter Camp Description" required></textarea>
                    <div class="valid-feedback">
                        Looks good Camper!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Camp Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" name="price" id="price"
                            aria-describedby="price-label" required>
                        <div class="valid-feedback">
                            Looks good Camper!
                        </div>
                    </div>

                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Create Campground</button>
                </div>

            </form>
        </div>
    </div>